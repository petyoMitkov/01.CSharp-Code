using System;

class ExchangesValues
{
    static void Main()
    {
        //01.Write an if statement that examines two integer variables
        //   and exchanges their values if the first one is greater
        //   than the second one.


        Console.WriteLine("Put two numbers: ");

        int firstNum = int.Parse(Console.ReadLine());
        int secondNum = int.Parse(Console.ReadLine());
        int numSaver = firstNum;

        if (firstNum > secondNum)
        {            
            firstNum = secondNum;
            secondNum = numSaver;            
        }
        Console.WriteLine("First number = {0} \nSwcond number = {1}",
                firstNum, secondNum);
        

    }
}

